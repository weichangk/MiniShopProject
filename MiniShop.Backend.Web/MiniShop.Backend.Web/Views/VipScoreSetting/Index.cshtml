<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>会员积分设置</title>
    <link rel="stylesheet" href="~/component/pear/css/pear.css" />
</head>
<body class="pear-container">
    <div class="layui-card">
        <div class="layui-card-body">
            <table id="vipScoreSetting-table" lay-filter="vipScoreSetting-table"></table>
        </div>
    </div>

    <script type="text/html" id="vipScoreSetting-toolbar">
        <button class="pear-btn pear-btn-primary pear-btn-md" lay-event="add">
            <i class="layui-icon layui-icon-add-1"></i>
            新增
        </button>
        <button class="pear-btn pear-btn-danger pear-btn-md" lay-event="batchRemove">
            <i class="layui-icon layui-icon-delete"></i>
            删除
        </button>
    </script>

    <script type="text/html" id="vipScoreSetting-bar">
        <button class="pear-btn pear-btn-primary pear-btn-sm" lay-event="edit"><i class="layui-icon layui-icon-edit"></i></button>
        <button class="pear-btn pear-btn-danger pear-btn-sm" lay-event="remove"><i class="layui-icon layui-icon-delete"></i></button>
    </script>

    <script type="text/html" id="vipScoreSetting-createTime">
        {{layui.util.toDateString(d.createdTime, 'yyyy-MM-dd')}}
    </script>

    <script src="~/component/layui/layui.js"></script>
    <script src="~/component/pear/pear.js"></script>
    <script>
            layui.use(['table', 'form', 'jquery', 'common'], function () {
                let table = layui.table;
                let form = layui.form;
                let $ = layui.jquery;
                let common = layui.common;

                let cols = [
                    [{
                        type: 'checkbox'
                    },
                    {
                        title: 'ID',
                        field: 'id',
                        align: 'center',
                        width: 100,
                        hide: true
                    },
                    {
                        title: '会员类别',
                        field: 'vipTypeName',
                        align: 'center',
                    },
                    {
                        title: '积分方式',
                        field: 'vipScoreWayDes',
                        align: 'center'
                    },
                    {
                        title: '操作',
                        toolbar: '#vipScoreSetting-bar',
                        align: 'center',
                        width: 130
                    }
                    ]
                ]

                table.render({
                    elem: '#vipScoreSetting-table',
                    url: 'GetPageByShopId',
                    page: true,//开启分页
                    cols: cols,
                    skin: 'line',
                    toolbar: '#vipScoreSetting-toolbar',
                    defaultToolbar: [{
                        title: '刷新',
                        layEvent: 'refresh',
                        icon: 'layui-icon-refresh',
                    }, 'filter', 'print', 'exports']
                });

                table.on('tool(vipScoreSetting-table)', function (obj) {
                    if (obj.event === 'remove') {
                        window.remove(obj);
                    } else if (obj.event === 'edit') {
                        window.edit(obj);
                    }
                });

                table.on('toolbar(vipScoreSetting-table)', function (obj) {
                    if (obj.event === 'add') {
                        window.add();
                    } else if (obj.event === 'refresh') {
                        window.refresh();
                    } else if (obj.event === 'batchRemove') {
                        window.batchRemove(obj);
                    }
                });


                window.add = function () {
                    let index = layer.open({
                        type: 2,
                        title: '新增',
                        shade: 0.1,
                        area: [common.isModile() ? '100%' : '1280px', common.isModile() ? '100%' : '760px'],
                        content: '/vipScoreSetting/add',
                        success : function () {       
                            var body = layer.getChildFrame('body', index);
                            body.find("#name").focus();                                                       
                        },
                        cancel: function(){
                        }
                    });
                    layer.full(index);
                }

                window.edit = function (obj) {
                    let index = layer.open({
                        type: 2,
                        title: '修改',
                        shade: 0.1,
                        area: [common.isModile() ? '100%' : '1280px', common.isModile() ? '100%' : '760px'],
                        content: '/vipScoreSetting/update/' + obj.data['id'],
                        success : function () {       
                            var body = layer.getChildFrame('body', index);
                            body.find("#submit").focus();                                                       
                        },
                        cancel: function(){
                        }
                    });
                    layer.full(index);
                }

                window.remove = function (obj) {
                    layer.confirm('确定要删除该会员积分设置', {
                        icon: 3,
                        title: '提示'
                    }, function (index) {
                        layer.close(index);
                        let loading = layer.load();
                        $.ajax({
                            url: "/vipScoreSetting/delete/" + obj.data['id'],
                            dataType: 'json',
                            type: 'delete',
                            success: function (result) {
                                layer.close(loading);
                                if (result.success) {
                                    layer.msg(result.msg, {
                                        icon: 1,
                                        time: 1000
                                    }, function () {
                                        table.reload('vipScoreSetting-table');
                                    });
                                } else {
                                    let index = layer.open({
                                        type: 2,
                                        title: '',
                                        shade: 0.1,
                                        area: ['1280px', '760px'],
                                        content: '/Error/Error?statusCode=' + result.status + '&errorMsg=' + result.msg,
                                    });
                                    layer.full(index);
                                }
                            }
                        })
                    });
                }

                window.batchRemove = function (obj) {

                    var checkIds = common.checkField(obj, 'id');

                    if (checkIds === "") {
                        layer.msg("未选中数据", {
                            icon: 3,
                            time: 1000
                        });
                        return false;
                    }

                    layer.confirm('确定要删除这些会员积分设置', {
                        icon: 3,
                        title: '提示'
                    }, function (index) {
                        layer.close(index);
                        let loading = layer.load();
                        $.ajax({
                            url: "/vipScoreSetting/batchDelete?ids=" + checkIds,
                            dataType: 'json',
                            type: 'delete',
                            success: function (result) {
                                layer.close(loading);
                                if (result.success) {
                                    layer.msg(result.msg, {
                                        icon: 1,
                                        time: 1000
                                    }, function () {
                                            table.reload('vipScoreSetting-table');
                                    });
                                } else {
                                    let index = layer.open({
                                        type: 2,
                                        title: '',
                                        shade: 0.1,
                                        area: ['1280px', '760px'],
                                        content: '/Error/Error?statusCode=' + result.status + '&errorMsg=' + result.msg,
                                    });
                                    layer.full(index);
                                }
                            }
                        })
                    });
                }

                window.refresh = function (param) {
                    table.reload('vipScoreSetting-table',{
                        url: 'GetPageByShopId'
                    });
                }
            })
    </script>
</body>
</html>
