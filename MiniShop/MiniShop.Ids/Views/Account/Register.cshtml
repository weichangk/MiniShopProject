@using IdentityServerHost.Quickstart.UI
@model RegisterViewModel

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width,initial-scale=1">
	<title>My Login Page &mdash; Bootstrap 4 Login Page Snippet</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
	<link rel="stylesheet" type="text/css" href="~/css/my-login.css">
</head>
<body class="my-login-page">
	<section class="h-100">
		<div class="container h-100">
			<div class="row justify-content-md-center h-100">
				<div class="card-wrapper">
@*					<div class="brand">
						<img src="~/img/logo.jpg" alt="logo">
					</div>*@
					<div class="card fat">
						<div class="card-body">
							<partial name="_ValidationSummary" />

							@*<h4 class="card-title">Register</h4>*@
							<form method="POST" class="my-login-validation" novalidate="">
								<div class="form-group">
									<label asp-for="Username"></label>
									<input class="form-control" placeholder="" asp-for="Username" autofocus>
								</div>

								<div class="form-group">
									<label asp-for="Phone"></label>
									<input class="form-control" placeholder="" asp-for="Phone" autofocus>
								</div>

								<div class="form-group">
									<label asp-for="Email"></label>
									<input class="form-control" placeholder="" asp-for="Email" autofocus>
								</div>

								<div class="form-group">
									<label asp-for="Password"></label>
									<input type="password" class="form-control" placeholder="" asp-for="Password" autocomplete="off">
								</div>

								<div class="form-group">
									<label asp-for="ConfirmPassword"></label>
									<input type="password" class="form-control" placeholder="" asp-for="ConfirmPassword" autocomplete="off">
								</div>

								<div class="form-group">
									<div class="form-check float-left">
										<input type="hidden" asp-for="AgreeTermsTrue" />
										<input class="form-check-input" asp-for="AgreeTerms">
										本人同意有关<a href="#">条款及协议</a>
									</div>
								</div>

								<div class="form-group m-0">
									<button  type="submit" name="button" value="register" class="btn btn-primary btn-block">
										注	册
									</button>
								</div>
								<div class="mt-4 text-center">
									已经有账户了？ <button class="btn btn-link btn-sm" name="button" value="login">登录</button>
								</div>
							</form>
						</div>
					</div>
					<div class="footer">
						Copyright &copy; 2022 &mdash; Mini Shop Company 
					</div>
				</div>
			</div>
		</div>
	</section>

	<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
	<script src="~/js/my-login.js"></script>
</body>
</html>